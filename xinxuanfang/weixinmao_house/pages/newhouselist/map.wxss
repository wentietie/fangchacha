@import "../newhouselist/index.wxss";
.sort_list{
}
.fixed-box{
  top:0;
}

.fixed-top,page,.fixed-top map{
  height: 100%;
  box-sizing: border-box;
  width: 100%;
}
.u-tap-btn.left {
    bottom: unset;
    margin-top: 100rpx;
    z-index: 1;
}
.btn-jion{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  box-shadow: 0px 4rpx 8rpx rgba(0,0,0,0.3);
  box-sizing: border-box;
}
.btn-jion .nav_item{
  border-right: 1px #000 solid;
}

.btn-jion .nav_item:last-child{
  border-right: 0;
}
.btn-jion .weui-flex__item{
  height: 100%;
  box-sizing:border-box;
  padding: 20rpx;
  padding-left:0; 
  display:table;
}
.btn-jion .weui-flex__item:first-child{
    padding-left: 20rpx;
}
.nav_item{
    margin: 0;
    padding: 0;
    text-align: center;
    background-color: #fff;
    height: 100%;
    width: 100%;
    display:table-cell; 
    vertical-align:middle;
    font-size: .7rem;
}
.btn-more{
  width: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border-radius: 50%;
  margin: auto;
  margin-top: -100rpx;
  position: fixed;
  bottom: 0;
  box-shadow: 0px 4rpx 8rpx rgba(0,0,0,0.3);
  box-sizing: content-box;
}