/* weixinmao_house/pages/index/reportDetail/reportDetail.wxss */
.eachTable{
  width: 690rpx;
  line-height: 60rpx;
  border-bottom: 1rpx solid #dddddd;
  padding: 10rpx 30rpx;
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
}
.eachTable image{
  width: 30rpx;
  height: 30rpx;
  display: block;
}
.cancelBook{
  border-radius: 10rpx;
  border: 1px solid #C89E6D;
  width: 180rpx;
  color: #C89E6D;
  text-align: center;
}
.bottomBtnList{
  width: 100%;
  height: 110rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  white-space: nowrap;
  border-top: 1rpx solid #dddddd;
  padding-top: 10rpx;
}

.eachLeft{
  width: 250rpx;
  display: inline-block;
  text-align: center;
  font-size: 30rpx;
}
.eachLeft image{
  width: 50rpx;
  height: 50rpx;
  display: block;
  margin: 0 auto;
  margin-bottom: 10rpx;
}
.addImg{
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
  bottom: 0;
  background-color: #ffffff;
}
.addBtn{
  margin-top: 50rpx;
  margin-left: 30rpx;
  border-radius: 10rpx;
  width: 150rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  border: 1rpx solid #dddddd;
  text-align: center;
}
.comfirmBtn{
  width: 80rpx;
  margin-left: 10%;
  position: fixed;
  right: 30rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  border: 1rpx solid #dddddd;
  text-align: center;
  top: 50rpx;
}