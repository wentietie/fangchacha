<form reportSubmit bindsubmit="savepubinfo">
    <view class="container">
        <view class="main">
            <view class="list">
                <view class="item">
                    <view class="name">拖欠项目</view>
                    <view class="selectitem">
                        {{item.title}}
                    </view>
                </view>
                <view class="item">
                    <view class="name">欠佣甲方</view>
                    <view class="selectitem">
                        {{item.cy_cname}}
                    </view>
                </view>
                <view class="item">
                    <view class="name">欠佣负责人</view>
                    <view class="selectitem">
                        {{item.cy_name}}
                    </view>
                </view>
                <view class="item">
                    <view class="name">项目区域</view>
                    <view class="selectitem">
                        {{item.quyu}}
                    </view>
                </view>
                <view class="item">
                    <view class="name">欠佣联系方式</view>
                    <view class="selectitem" style="font-weight: bold;">
                        {{item.cy_tel}}
                    </view>
                </view>
                <view class="item">
                    <view class="name">欠佣金额</view>
                    <view class="selectitem">
                        {{item.cy_money}}
                    </view>
                </view>
                <view class="item">
                    <view class="name">成交时间</view>
                    <view class="selectitem">
                        {{item.ctimes}}
                    </view>
                </view>
                <view class="item">
                    <view class="name">承诺付款时间</view>
                    <view class="selectitem">
                        {{item.times}}
                    </view>
                </view>
                <view class="item">
                    <view class="name">拒绝付款原因</view>
                </view>
                <view class="item">
                    <view class="selectitem" style="width:auto">
                        {{item.yuanying}}
                    </view>
                </view>
                <view class="item">
                    <view class="name">追款人姓名</view>
                    <view class="selectitem">
                        {{item.name}}
                    </view>
                </view>
                <view class="item">
                    <view class="name">追款人公司</view>
                    <view class="selectitem">
                        {{item.cname}}
                    </view>
                </view>
                <view class="item">
                    <view class="name">追款人联系方式</view>
                    <view class="selectitem">
                        {{item.tel}}
                    </view>
                </view>
                <view class="item">
                    <view class="name">备 注:</view>
                </view>
                <view class="item">
                    <view class="selectitem" style="width:auto">
                        {{item.desc}}
                    </view>
                </view>
            </view>
        </view>
    </view>
</form>
<include src="../sidan/commentlist" />
<include src="../index/css1.wxml" />

<view class="u-tap-btn">
    <button class="u-go-home" open-type="share">
        <text class="iconfont fa fa-share-alt"/> 分享
    </button>
    <button class="u-go-home" bindtap="toUrl" data-url="tab:../index/index">
        <text class="iconfont fa fa-home"/> 首页
    </button>
    <button class="u-go-home" openType="contact">
        <text class="iconfont fa fa-comments-o"/> 客服
    </button>
</view>